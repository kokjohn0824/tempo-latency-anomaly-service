{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Time-Aware API Latency Anomaly Detection Service based on Grafana Tempo traces\n\nThis service provides real-time latency anomaly detection using statistical methods (P50, P95, MAD).\nIt automatically ingests traces from Tempo and maintains time-bucketed baselines per (service, endpoint, hour, dayType).",
        "title": "Tempo Latency Anomaly Detection Service API",
        "contact": {
            "name": "API Support",
            "email": "support@example.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/healthz": {
            "get": {
                "description": "Check if the service is running and healthy",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Health"
                ],
                "summary": "Health check",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handlers.HealthResponse"
                        }
                    }
                }
            }
        },
        "/v1/anomaly/check": {
            "post": {
                "description": "Evaluate if a given request latency is anomalous based on historical baselines\nThe service uses time-bucketed baselines (per hour and day type) and statistical methods (P50, P95, MAD) to detect anomalies",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Anomaly Detection"
                ],
                "summary": "Check for latency anomaly",
                "parameters": [
                    {
                        "description": "Anomaly check request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/domain.AnomalyCheckRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/domain.AnomalyCheckResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid JSON",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "503": {
                        "description": "Service not available",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/v1/available": {
            "get": {
                "description": "Retrieve all services and endpoints that have sufficient baseline samples for anomaly detection\nReturns a list of service/endpoint pairs grouped by service, along with their available time buckets\nOnly includes baselines with sufficient samples (configured via min_samples)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Available Services"
                ],
                "summary": "List available services and endpoints",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/domain.AvailableServicesResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "503": {
                        "description": "Service not available",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/v1/baseline": {
            "get": {
                "description": "Retrieve baseline statistics (P50, P95, MAD) for a specific service, endpoint, hour, and day type\nUsed for debugging and monitoring baseline data",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Baseline"
                ],
                "summary": "Get baseline statistics",
                "parameters": [
                    {
                        "type": "string",
                        "example": "\"twdiw-customer-service-prod\"",
                        "description": "Service name",
                        "name": "service",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "example": "\"GET /actuator/health\"",
                        "description": "Endpoint name",
                        "name": "endpoint",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "example": 16,
                        "description": "Hour of day (0-23)",
                        "name": "hour",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "example": "\"weekday\"",
                        "description": "Day type (weekday or weekend)",
                        "name": "dayType",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/store.Baseline"
                        }
                    },
                    "400": {
                        "description": "Invalid parameters",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Baseline not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "503": {
                        "description": "Store not available",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.AnomalyCheckRequest": {
            "type": "object",
            "properties": {
                "durationMs": {
                    "type": "integer",
                    "example": 250
                },
                "endpoint": {
                    "type": "string",
                    "example": "GET /actuator/health"
                },
                "service": {
                    "type": "string",
                    "example": "twdiw-customer-service-prod"
                },
                "timestampNano": {
                    "type": "integer",
                    "example": 1673000000000000000
                }
            }
        },
        "domain.AnomalyCheckResponse": {
            "type": "object",
            "properties": {
                "baseline": {
                    "$ref": "#/definitions/domain.BaselineStats"
                },
                "bucket": {
                    "$ref": "#/definitions/domain.TimeBucket"
                },
                "explanation": {
                    "type": "string",
                    "example": "duration 250ms within threshold 1124.00ms"
                },
                "isAnomaly": {
                    "type": "boolean",
                    "example": false
                }
            }
        },
        "domain.AvailableServicesResponse": {
            "type": "object",
            "properties": {
                "services": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/domain.ServiceEndpoint"
                    }
                },
                "totalEndpoints": {
                    "type": "integer",
                    "example": 15
                },
                "totalServices": {
                    "type": "integer",
                    "example": 3
                }
            }
        },
        "domain.BaselineStats": {
            "type": "object",
            "properties": {
                "mad": {
                    "type": "number",
                    "example": 43
                },
                "p50": {
                    "type": "number",
                    "example": 233.5
                },
                "p95": {
                    "type": "number",
                    "example": 562
                },
                "sampleCount": {
                    "type": "integer",
                    "example": 50
                },
                "updatedAt": {
                    "type": "string",
                    "example": "2026-01-15T08:00:00Z"
                }
            }
        },
        "domain.ServiceEndpoint": {
            "type": "object",
            "properties": {
                "buckets": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "16|weekday",
                        "17|weekday"
                    ]
                },
                "endpoint": {
                    "type": "string",
                    "example": "GET /actuator/health"
                },
                "service": {
                    "type": "string",
                    "example": "twdiw-customer-service-prod"
                }
            }
        },
        "domain.TimeBucket": {
            "type": "object",
            "properties": {
                "dayType": {
                    "description": "\"weekday\" or \"weekend\"",
                    "type": "string",
                    "example": "weekday"
                },
                "hour": {
                    "description": "0-23",
                    "type": "integer",
                    "example": 16
                }
            }
        },
        "handlers.HealthResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "ok"
                }
            }
        },
        "store.Baseline": {
            "type": "object",
            "properties": {
                "mad": {
                    "type": "number",
                    "example": 43
                },
                "p50": {
                    "type": "number",
                    "example": 233.5
                },
                "p95": {
                    "type": "number",
                    "example": 562
                },
                "sampleCount": {
                    "type": "integer",
                    "example": 50
                },
                "updatedAt": {
                    "type": "string",
                    "example": "2026-01-15T08:00:00Z"
                }
            }
        }
    },
    "tags": [
        {
            "description": "Health check endpoints",
            "name": "Health"
        },
        {
            "description": "Anomaly detection and evaluation endpoints",
            "name": "Anomaly Detection"
        },
        {
            "description": "Baseline statistics query endpoints",
            "name": "Baseline"
        },
        {
            "description": "Query available services and endpoints with sufficient baseline data",
            "name": "Available Services"
        }
    ]
}